/* pages/contact/contact.wxss */

page {
  background-color: #f1f1f1;
}
.topBlock{
  background: linear-gradient(to right, #3b7ffa , rgb(49, 225, 248));
  display: flex;
  flex-direction: row;
  justify-content: right;
  align-items: center;
  margin-bottom: 50rpx;
  height: 130rpx;
  width: 100%;
  padding-left: 30rpx;
}
.return{
  height: 60rpx;
  width: 8%;
}
.titleVie{
  width: 70%;
  display: flex;
  justify-content: center;
}
.name{
  font-size: 36rpx;
  color: #fff;
}
.inputRoom {
  width: 100vw;
  height: 16vw;
  border-top: 1px solid #cdcdcd;
  background-color: #f1f1f1;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  z-index: 20;
}

input {
  width: 76vw;
  height: 9.33vw;
  background-color: #fff;
  border-radius: 40rpx;
  margin-left: 2vw;
  padding: 0 3vw;
  font-size: 28rpx;
  color: #444;
}

.leftMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #fff;
  margin-left: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
}

.rightMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #96EB6A;
  margin-right: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
}
